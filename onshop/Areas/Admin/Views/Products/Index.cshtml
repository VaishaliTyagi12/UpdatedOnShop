@using onshop.Models;
@model IEnumerable<Products>
@{ ViewData["Title"] = "Index"; }

<div class="row">
    <div class="col-6">
        <h2 class="text-info">ProductList</h2>

    </div>
    <div class="col-6 text-right">
        <a asp-action="Create" class="btn-btn-info"><i class="fas fa-plus"></i>&nbsp;Add New Product </a>
    </div>
</div>
<br />
<div>
    <table class="table table-striped border">
        <tr class="table-info">
            <th>
                @Html.DisplayNameFor(c => c.Name)
            </th>
            <th>
                @Html.DisplayNameFor(c => c.price)
            </th>
            <th>
                @Html.DisplayNameFor(c => c.ProductColour)
            </th>
            <th>
                @Html.DisplayNameFor(c => c.IsAvailable)
            </th>
            <th>
                @Html.DisplayNameFor(c => c.ProductTypesId)
            </th>
            <th></th>
            <th></th>
        </tr>
    @foreach (var item in Model)
    {
    <tr>
        <td>@item.Name</td>
        <td>@item.price</td>
        <td>@item.ProductColour</td>
        <td>@item.IsAvailable</td>
        <td>@item.ProductTypesId</td>
        <td>
            <partial name="_ButtonPartial" model="@item.id" />
        </td>
    </tr>            }
</table>
</div>